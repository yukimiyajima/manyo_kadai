<p id="notice"><%= notice %></p>

<h1><%= t('view.tasks') %></h1>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true"), class:"btn btn-primary" %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true"), class:"btn btn-primary" %>
<br>
<br>
<%= form_with(model: @task, local: true, method: :get) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :status %>
  <%= form.select :status, [["未着手", 0],["着手中", 1],["完了", 2]], include_blank: true %>
  <%= form.submit "検索" %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>優先順位</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @tasks %>
<br>
<%= link_to 'タスク新規作成', new_task_path, class:"btn btn-primary"%>