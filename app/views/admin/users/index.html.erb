<h1><%= t('view.admin_index') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>管理者権限</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= link_to '詳細', user, class:"btn btn-success" %></td>
        <td><%= link_to '編集', edit_admin_user_path(user), class:"btn btn-warning" %></td>
        <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除していいですか？' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ユーザー新規作成', new_user_path, class:"btn btn-primary" %>